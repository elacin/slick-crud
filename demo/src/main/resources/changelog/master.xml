<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="baseline" author="Ã˜yvind Raddum Berg">

        <createTable tableName="stores">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="closed" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="products">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="sold_by" type="varchar(255)">
                <constraints references="stores(id)" foreignKeyName="store_inventory" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="employees">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="works_at" type="varchar(255)">
                <constraints references="stores(id)" foreignKeyName="store_employees" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
